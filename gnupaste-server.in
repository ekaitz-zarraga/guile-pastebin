(use-modules (ice-9 getopt-long)
	     (gnupaste))

(define (main args)
  (define option-spec '((repl (single-char #\r) (value #f))))
  (define options (getopt-long args option-spec))

  (run-gnupaste #:repl? (option-ref options 'repl #f)))
